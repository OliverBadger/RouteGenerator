@using Microsoft.AspNetCore.Identity
@using RouteGenerator.Areas.Identity.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Route Generator - Home Page";
    var isLoggedIn = SignInManager.IsSignedIn(User);
}
<link href="~/css/home.css" rel="stylesheet" />

@if (isLoggedIn)
{
    <div class="text-center">
        <!-- Hero Section with Video Background -->
        <div class="hero">
            <!-- Fullscreen YouTube Video -->
            <div class="video-container">
                <iframe src="https://www.youtube.com/embed/E6U67dKB8gs?autoplay=1&loop=1&playlist=E6U67dKB8gs&controls=0&mute=1"
                        frameborder="0"
                        allow="autoplay; encrypted-media"
                        allowfullscreen>
                </iframe>
            </div>

            <div class="hero-text">
                <h1>Welcome, @User.Identity.Name!</h1>
                <p>Explore your personalized routes and stay active!</p>
                <a href="/Map" class="btn-primary animated-btn">Generate Your Route</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <div class="hero">
            <!-- Fullscreen YouTube Video for Guest -->
            <div class="video-container">
                <iframe src="https://www.youtube.com/embed/E6U67dKB8gs?autoplay=1&loop=1&playlist=E6U67dKB8gs&controls=0&mute=1"
                        frameborder="0"
                        allow="autoplay; encrypted-media"
                        allowfullscreen>
                </iframe>
            </div>

            <div class="hero-text">
                <h1>Welcome to Route Generator</h1>
                <p>Discover exciting routes to keep your runs fresh and engaging.</p>
                <a href="/Identity/Account/Login" class="btn-primary animated-btn">Login</a>
                <a href="/Identity/Account/Register" class="btn-secondary animated-btn">Register</a>
            </div>
        </div>
    </div>
}

