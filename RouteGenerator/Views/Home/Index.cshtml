﻿@using Microsoft.AspNetCore.Identity
@using RouteGenerator.Areas.Identity.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    string apiKey = ConfigSaves.GoogleMapsSecret;
    ViewData["Title"] = "Map Generator - Home Page";
    var isLoggedIn = SignInManager.IsSignedIn(User);
}

<link href="~/css/home.css" rel="stylesheet" />

<div class="hero-section">
    <div class="hero-text">
        <h1>Stay Active</h1>
        <p>Push your limits. Explore new routes. Elevate your fitness.</p>
        <div class="hero-buttons">
            @if (isLoggedIn)
            {
                <a href="/Map" class="btn-primary">Explore Routes</a>
            }
            else
            {
                <a href="/Identity/Account/Login" class="btn-primary">Login</a>
                <a href="/Identity/Account/Register" class="btn-secondary">Register</a>
            }
        </div>
    </div>
</div>